{
    "name": "erwinromkes/magento2-psalm",
    "description": "Psalm plugin for Magento 2",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcus Pettersen Irgens",
            "email": "marcus.irgens@visma.com"
        },
        {
            "name": "Timon de Groot",
            "email": "timon@mooore.nl"
        },
        {
            "name": "Erwin Romkes",
            "email": "erwin@mooore.nl"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "vimeo/psalm": "^5.8",
        "php": "^7.4 || ~8.0.0 || ~8.1.0 || ~8.2.0",
        "ext-simplexml": "*"
    },
    "extra": {
        "psalm": {
            "pluginClass": "ErwinRomkes\\Magento2Psalm\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "ErwinRomkes\\Magento2Psalm\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ErwinRomkes\\Magento2Psalm\\": [
                "tests/"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5",
        "magento/framework": "^100"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ]
}
